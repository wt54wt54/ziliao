<!--pages/map/map.wxml-->
<text>pages/map/map.wxml</text>
<button bindtap='openLocation'>打开内置地图</button>
<map 
id="map" 
longitude="{{pos.x}}" 
latitude="{{pos.y}}" 
scale="15" 
style="width: 100%; height: 90vh;"
show-location 
controls="{{controls}}" 
bindcontroltap="controltap" 
markers="{{markers}}" 
bindmarkertap="markertap" 
></map>

